{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% block stylesheets %}
        <style>
        </style>
    {% endblock %}

    <div class="row text-center">
        <div class="col p-5 text-center" style="min-height: 14rem;">
            <h2 class="name-site">FindACoach</h2>
            <h1 class="display-4" style="font-size: 2.5em;">Me Connecter</h1>
        </div>
    </div>

    <div class="container">

        <div class="row justify-content-center">
            <img class="mb-5" src="{{ asset('login-logo.png') }}" alt="" style="height: 150px;">
        </div>

    <form method="post">

        <div class="row justify-content-center">
        <div class="col-6">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword" class="mt-2">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-sm btn-outline-primary m-3" type="submit">Se connecter</button>

            <a href="{{ path('forgottenPassword') }}" style="font-size: .8em;">Mot de passe oubli√©</a>

        </div>
        </div>

    </form>

    </div>{#CONTAINER#}

{% endblock %}
