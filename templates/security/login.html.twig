{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% block stylesheets %}
        <style>
            .name-site {
                color: white;
                font-family: 'Baloo Bhai', cursive;
                font-size:4em;
                text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px rgba(0,0,0,.9);
            }
            .img-top {
                background: url(../login.jpg) no-repeat center center fixed;
                background-size: cover;
                box-shadow: 0px 0px 25px 30px rgba(0, 0, 0, .5);
            }
        </style>
    {% endblock %}


    <div class="row text-center mb-5 text-center img-top" style="box-shadow: 0px 0px 25px 30px rgba(0, 0, 0, .7);">
        <div class="col p-5 text-center" style="min-height: 14rem;">
            <h2 class="name-site" style="">FindACoach</h2>
            <h1 class="display-4" style="font-size: 2.5em;">Me Connecter</h1>
        </div>
    </div>

    <div class="container">

    <form method="post">

        <div class="row justify-content-center">
        <div class="col-6">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-sm border-primary text-light m-3" type="submit">
                Se connecter
            </button>

            <a href="{{ path('forgottenPassword') }}" style="font-size: .8em;">Mot de passe oubli√©</a>

        </div>
        </div>

    </form>

    </div>
{% endblock %}
