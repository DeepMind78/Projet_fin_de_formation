{% extends 'base.html.twig' %}

{% block title %}Réinisialisation du mot de passe{% endblock %}

{% block body %}
    {% block stylesheets %}
        <style>
            .name-site {
                color: white;
                font-family: 'Baloo Bhai', cursive;
                font-size:4em;
                text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px rgba(0,0,0,.9);
            }
            .form-control {
                box-shadow: 5px 5px 5px 0px rgba(0, 0, 0, .6);
                border: 1px solid black;
            }
            .btn:hover {
                background: #007BFF;
            }
        </style>
    {% endblock %}

    <div class="row text-center">
        <div class="col p-5 text-center" style="min-height: 14rem;">
            <h2 class="name-site">FindACoach</h2>
            <h1 class="display-4" style="font-size: 2.5em;">Réinitialisation mot de passe</h1>
        </div>
    </div>


    <div class="container">

        <div class="row justify-content-center">
            <img class="mb-5" src="{{ asset('cadena-1.png') }}" alt="" style="height: 150px;">
        </div>

        <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" class="form-group">
                <input type="email" placeholder="email" name="email" class="form-control">
                <button class="btn btn-sm border border-primary text-light mt-3">Envoyer</button>
            </form>
        </div>
        </div>


    </div>{#CONTAINER#}

{% endblock %}