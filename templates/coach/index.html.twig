{% extends 'base.html.twig' %}

{% block title %}Fais ta fiche PD de Coach{% endblock %}

{% block body %}
    {% block stylesheets %}
        <style>
            .name-site {
                color: white;
                font-family: 'Baloo Bhai', cursive;
                font-size:4em;
                text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px rgba(0,0,0,.9);
            }
            .img-top {
                background: url(../../ail_work_working.jpg) no-repeat center center fixed;
                background-size: cover;
                box-shadow: 0px 0px 25px 30px rgba(0, 0, 0, .7);
            }

            .form-control {
                box-shadow: 5px 5px 5px 0px rgba(0, 0, 0, .6);
                border: 1px solid black;
            }
            textarea {
                box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 1);
            }
            button {
                box-shadow: 2px 2px 5px 0px rgba(0, 0, 0, 1);
            }
        </style>
    {% endblock %}

    <div class="row text-center mb-5 text-center img-top" style="box-shadow: 0px 0px 25px 30px rgba(0, 0, 0, .7);">
        <div class="col p-5 text-center" style="min-height: 14rem;">
            <h2 class="name-site" style="">FindACoach</h2>
            <h1 class="display-4" style="font-size: 2.5em;">Ma Fiche</h1>
        </div>
    </div>


<div class="container">

    {% if is_granted("ROLE_COACH") and error == false %}

    <p>
    <div class="row justify-content-center">
        <div class="col-8">

            {{form_start(ficheCoach)}}
            <div class="row">
                <div class="col-6">
                    {{ form_row(ficheCoach.nom) }}
                </div>
                <div class="col-6">
                    {{ form_row(ficheCoach.prenom) }}
                </div>
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(ficheCoach.adresse) }}
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    {{ form_row(ficheCoach.codePostal) }}
                </div>
                <div class="col-6">
                    {{ form_row(ficheCoach.ville) }}
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    {{ form_row(ficheCoach.telephone) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    {{ form_row(ficheCoach.age) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(ficheCoach.imageFile) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(ficheCoach.diplomeFile) }}
                </div>
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(ficheCoach.descriptionCoach) }}
                </div>
            </div>
            <div class="row">
                <div class="col">

                    {{ form_row(ficheCoach.descriptionSeance) }}
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    {{ form_row(ficheCoach.prix) }}
                </div>
            </div>
                    {{form_rest(ficheCoach)}}



            <button class='btn btn-sm btn-primary m-3' type="submit">Enregistrer</button>
            {{form_end(ficheCoach)}}

        </div>
    </div>



    {% else %}
            <h2>Vous n'avez pas accès à cette partie</h2>
            <a href="{{path('home')}}">Lien vers menu principal</a>
    {% endif %}

</div>

{% endblock %}
